<style>
    .frame-block{
        display: flex;
        width: 995px;
        padding: 10px 125px;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: 10px; 
    }

    .block-div {
        display: flex;
        width: 870px;
        padding: 5px 0px;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: 10px; 
    }

    h1 {
    color: #000;
    text-align: center;
    font-family: "Exo 2";
    font-size: 70px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    margin-bottom: 0px; 
    margin-top: 0px;
    }

    h2 {
    color: #000;
    font-family: "Exo 2";
    font-size: 40px;
    font-style: normal;
    font-weight: 400;
    line-height: normal; 
    margin-bottom: 0px; 
    margin-top: 0px;    
    }

    img {
        width: 97px;
        height: 97px; 
    }
    
        
    
</style>