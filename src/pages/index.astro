import Layout from "../layouts/Layout.astro";
---

<Layout title="Weemake" description="Weemake">

    <section class="frame-block">
        <div class="block-div">
            <img  src="../../public/attachments/logo.png" />
            <h1>LA SOLUTION</h1>
            <h1>WEEMAKE</h1>
            <h2>Créez des interfaces de saisie en toute simplicité</h2>
        </div>
